// Prisma schema for ASATRA

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// USER & PROFILE
// ============================================
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  phone         String?   @unique
  passwordHash  String
  name          String
  cnic          String?   // Pakistani National ID
  cnicVerified  Boolean   @default(false)
  role          UserRole  @default(GUEST)
  avatarUrl     String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  suspended     Boolean   @default(false)

  // Relations
  hostProfile   HostProfile?
  listings      Listing[]
  bookings      Booking[] @relation("GuestBookings")
  reviewsAuthor Review[]  @relation("ReviewAuthor")
  reviewsSubject Review[] @relation("ReviewSubject")
  disputes      Dispute[]

  @@index([email])
  @@index([phone])
}

model HostProfile {
  id            String    @id @default(cuid())
  userId        String    @unique
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  bio           String?
  responseRate  Int?      // Percentage 0-100
  responseTime  Int?      // Average minutes
  totalReviews  Int       @default(0)
  rating        Float?    // Aggregate rating
  isSuperhost   Boolean   @default(false)
  
  // Banking (Simplified for MVP - ideally encrypted)
  bankName      String?
  accountNumber String?
  ibon          String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

enum UserRole {
  GUEST
  HOST
  ADMIN
}

// ============================================
// LISTING (ex-Property)
// ============================================
model Listing {
  id              String       @id @default(cuid())
  title           String
  description     String
  propertyType    PropertyType
  
  // Location
  address         String
  city            String
  province        Province
  latitude        Float?
  longitude       Float?
  
  // Pricing (PKR)
  pricePerNight   Int
  cleaningFee     Int          @default(0)
  
  // Capacity & Details
  maxGuests       Int
  bedrooms        Int
  beds            Int
  bathrooms       Int
  
  // Features
  amenities       String[]
  houseRules      String?
  
  // Settings
  instantBook     Boolean      @default(false)
  familyOnly      Boolean      @default(false)
  isActive        Boolean      @default(true) 
  isVerified      Boolean      @default(false)
  
  // Moderation
  status          ListingStatus @default(PENDING)
  adminNotes      String?

  // Stats
  avgRating       Float        @default(0)
  reviewCount     Int          @default(0)

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  // Relations
  hostId          String
  host            User         @relation(fields: [hostId], references: [id])
  bookings        Booking[]
  reviews         Review[]
  images          ListingImage[]
  
  @@index([city])
  @@index([pricePerNight])
  @@index([hostId])
}

model ListingImage {
  id        String   @id @default(cuid())
  url       String
  caption   String?
  order     Int      @default(0)
  listingId String
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

enum Province {
  PUNJAB
  SINDH
  KPK
  BALOCHISTAN
  GILGIT_BALTISTAN
  ISLAMABAD
  AZAD_KASHMIR
  ICT
  AJK
}

enum PropertyType {
  HOUSE
  APARTMENT
  GUEST_HOUSE
  HOTEL
  FARM_HOUSE
  FARMHOUSE
  BEACH_HUT
  COTTAGE
  ROOM
}

// ============================================
// BOOKING & PAYMENTS
// ============================================
model Booking {
  id              String        @id @default(cuid())
  
  checkIn         DateTime
  checkOut        DateTime
  guestCount      Int
  
  // Financial Snapshot
  nightlyRate     Int
  nights          Int
  subtotal        Int
  cleaningFee     Int
  serviceFee      Int
  totalAmount     Int
  
  status          BookingStatus @default(PENDING)
  
  // Messages
  guestMessage    String?
  hostResponse    String?
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relations
  guestId         String
  guest           User          @relation("GuestBookings", fields: [guestId], references: [id])
  listingId       String
  listing         Listing       @relation(fields: [listingId], references: [id])
  payment         Payment?
  dispute         Dispute?
  review          Review?

  @@index([guestId])
  @@index([listingId])
  @@index([status])
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  REJECTED
}

model Payment {
  id            String        @id @default(cuid())
  
  amount        Int
  currency      String        @default("PKR")
  method        PaymentMethod
  status        PaymentStatus @default(PENDING)
  
  gatewayRef    String?       // External Transaction ID
  metadata      Json?         // Gateway response payload
  
  paidAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  bookingId     String        @unique
  booking       Booking       @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([bookingId])
}

enum PaymentMethod {
  JAZZCASH
  EASYPAISA
  BANK_TRANSFER
  CASH_ON_ARRIVAL
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

// ============================================
// REVIEWS & DISPUTES
// ============================================
model Review {
  id              String   @id @default(cuid())
  
  rating          Int      // 1-5
  comment         String
  
  // Sub-scores
  cleanliness     Int?
  accuracy        Int?
  communication   Int?
  location        Int?
  value           Int?
  
  response        String?  // Host response
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  authorId        String
  author          User     @relation("ReviewAuthor", fields: [authorId], references: [id])
  subjectId       String
  subject         User     @relation("ReviewSubject", fields: [subjectId], references: [id])
  
  listingId       String
  listing         Listing  @relation(fields: [listingId], references: [id])
  
  bookingId       String   @unique
  booking         Booking  @relation(fields: [bookingId], references: [id])

  @@index([listingId])
  @@index([authorId])
}

model Dispute {
  id            String        @id @default(cuid())
  category      DisputeReason
  description   String
  evidence      String[]      // URLs to images/docs
  status        DisputeStatus @default(OPEN)
  resolution    String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  bookingId     String        @unique
  booking       Booking       @relation(fields: [bookingId], references: [id])
  openedById    String
  openedBy      User          @relation(fields: [openedById], references: [id])
}

enum DisputeReason {
  DAMAGE
  CLEANLINESS
  MISREPRESENTATION
  CANCELLATION
  OTHER
}

enum DisputeStatus {
  OPEN
  UNDER_REVIEW
  RESOLVED
  DISMISSED
}

enum ListingStatus {
  PENDING
  APPROVED
  REJECTED
}
